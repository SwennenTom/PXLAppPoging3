@model PXLApp.Models.VakLector

@{
    ViewData["Title"] = "Edit";
}

<h1>Wijs ander vak toe aan Lector</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VakLectorId" />
            <div class="form-group">
                <label asp-for="Vak" class="control-label"></label>
                <select asp-for="VakId" class="form-control" asp-items="ViewBag.VakId"></select>
                <span asp-validation-for="VakId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lector" class="control-label"></label>
                <select asp-for="LectorId" class="form-control" asp-items="ViewBag.LectorId"></select>
                <span asp-validation-for="LectorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
