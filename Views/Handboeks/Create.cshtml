@model PXLApp.Models.Handboek

@{
    ViewData["Title"] = "Nieuw handboek";
}

<h1>Nieuw handboek</h1>

@*<h4>Handboek</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KostPrijs" class="control-label"></label>
                <input asp-for="KostPrijs" class="form-control" />
                <span asp-validation-for="KostPrijs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uitgiftedatum" class="control-label"></label>
                <input asp-for="Uitgiftedatum" class="form-control" />
                <span asp-validation-for="Uitgiftedatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Afbeelding" class="control-label"></label>
                <input asp-for="Afbeelding" class="form-control" />
                <span asp-validation-for="Afbeelding" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
