@model IEnumerable<PXLApp.Models.Inschrijving>

@{
    ViewData["Title"] = "Index";
}

<h1>Overzicht inschrijvingen</h1>

<p>
    <a asp-action="Create"><img src="/images/plus.png" style="width: 35px;" alt="Nieuw" /></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VakLector.Vak)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcademieJaar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Gebruiker.Voornaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VakLector.Vak.VakNaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademieJaar.StartDatum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InschrijvingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InschrijvingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InschrijvingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
