@model PXLApp.Models.Inschrijving

@{
    ViewData["Title"] = "Create";
}

<h1>Nieuwe inschrijving</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student" class="control-label"></label>
                <select asp-for="StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VakLectorId" class="control-label"></label>
                <select asp-for="VakLectorId" class ="form-control" asp-items="ViewBag.VakLectorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AcademieJaar" class="control-label"></label>
                <select asp-for="AcademieJaarId" class ="form-control" asp-items="ViewBag.AcademieJaarId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
