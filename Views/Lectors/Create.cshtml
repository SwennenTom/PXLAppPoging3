@model PXLApp.Models.Lector

@{
    ViewData["Title"] = "Create";
}

<h1>Nieuwe Lector</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GebruikerId" class="control-label"></label>
                <select asp-for="GebruikerId" class ="form-control" asp-items="ViewBag.GebruikerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark p-1 m-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
