@model PXLApp.Models.Vak

@{
    ViewData["Title"] = "Verwijder vak";
}

<h1>Verwijder vak</h1>

<h3>Zeker dat je dit wil verwijderen?</h3>
<div>
   @* <h4>Vak</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VakNaam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VakNaam)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Studiepunten)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Studiepunten)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Handboek)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Handboek.Titel)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VakId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar overzicht</a>
    </form>
</div>
